{
  "name": "arbitrum-bridge",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean && rm -rf artifacts cache crytic-export corpus",
    "format": "prettier --check \"./**/*.{ts,sol}\"",
    "format:fix": "prettier --write \"./**/*.{ts,sol}\"",
    "lint": "eslint --ext .ts test test-e2e arbitrum-helpers scripts hardhat.config.ts",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "yarn test:unit",
    "test:unit": "hardhat test",
    "test-e2e": "mocha --config .mocharc-e2e.js",
    "test:fix": "yarn lint:fix && yarn format:fix && yarn test && yarn typecheck",
    "fuzz": "echidna-test . --contract DaiEchidnaTest --config echidna.config.yml",
    "certora": "certoraRun --solc ~/.solc-select/artifacts/solc-0.6.11 contracts/l2/dai.sol:Dai certora/HashHelper.sol --verify Dai:certora/dai.spec --rule_sanity --solc_args \"['--optimize','--optimize-runs','200']\"",
    "deploy:mainnet": "TS_NODE_TRANSPILE_ONLY=1 ts-node ./scripts/deployMainnet.ts",
    "deploy:rinkeby": "TS_NODE_TRANSPILE_ONLY=1 ts-node ./scripts/deployRinkeby.ts"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.11",
    "@eth-optimism/smock": "=1.1.9",
    "@makerdao/hardhat-utils": "^0.1.3",
    "@nomiclabs/ethereumjs-vm": "^4.2.2",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.0",
    "@types/chai": "^4.2.12",
    "@types/lodash": "^4.14.170",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@types/utf8": "^2.1.6",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^9.0.2",
    "eslint": "^7.15.0",
    "eslint-config-typestrict": "^1.0.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "eth-permit": "^0.1.9",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.0",
    "hardhat": "^2.4.1",
    "hardhat-gas-reporter": "^1.0.4",
    "lodash": "^4.17.21",
    "mocha": "^8.1.1",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "ts-essentials": "^7.0.1",
    "ts-node": "^9.0.0",
    "typechain": "^5.0.0",
    "typescript": "^4.0.2",
    "utf8": "^3.0.0",
    "solidity-coverage": "^0.7.17"
  },
  "resolutions": {
    "ethers": "5.4.0",
    "@ethersproject/providers": "5.4.0",
    "@ethersproject/contracts": "5.4.0",
    "@ethersproject/abi": "5.4.0"
  }
}
